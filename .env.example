# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here

# Vector Database Configuration
# Set to "true" for local development with Chroma, "false" for production with Pinecone
USE_LOCAL_VECTOR_DB=true

# Chroma Configuration (Local Development)
# Option 1: Server mode (requires Docker or pip install chromadb)
CHROMA_URL=http://localhost:8000
# Option 2: In-memory mode (no server needed, data lost on restart)
# CHROMA_IN_MEMORY=true

# Pinecone Configuration (Production)
PINECONE_API_KEY=your-pinecone-api-key-here
PINECONE_INDEX_NAME=dental-practitioners

# Backend Configuration (existing)
NEXT_PUBLIC_BACKEND_URL=http://localhost:8080
